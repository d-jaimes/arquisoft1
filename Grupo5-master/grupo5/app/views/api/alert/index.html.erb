<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to api_microcontrolador_index_path, class: "nav-link" do %>
            Areas
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to api_alert_index_path, class: "nav-link active" do %>
            Todas las alertas
          <% end %>
        </li>
      </ul>
    </nav>
    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <h2>Todas Las Alertas Presentadas</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Tipo</th>
              <th>Area</th>
              <th>Nivel</th>
            </tr>
          </thead>
          <tbody>
            <% Api::Alert.all.each do |alerta| %>
              <tr>
                <td><%= alerta.id %></td>
                <td><%= alerta.get_variable_type_as_string %></td>
                <td><%= alerta.microcontrolador.area %></td>
                <td><%= alerta.microcontrolador.nivel %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
